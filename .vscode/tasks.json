{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Healthcare AI (NeMo Guardrails)",
            "type": "shell",
            "command": "python",
            "args": ["nemo_web_interface.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Download NLP Models",
            "type": "shell",
            "command": "python",
            "args": ["-m", "spacy", "download", "en_core_web_sm"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Run Evaluation Tests",
            "type": "shell",
            "command": "python",
            "args": ["evaluation/results_analysis.py"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        }
    ]
}